<div class="container">
  <h1 class="d-flex justify-content-center mt-5 mb-4">New List</h1>

  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-center">
        <div class="col-6 form">
          <%= simple_form_for @list do |f| %>
            <%= f.input :name %>
            <%= f.button :submit, class: "btn btn-outline-danger" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
