<div class="container">
  <h1><%= @list.name %></h1>

  <%= link_to "Add a new movie", new_list_bookmark_path(@list), class:"btn btn-outline-danger" %>

  <div class="film-box">
    <% @list.movies.each do |movie| %>
      <div class="film-card">
        <%= image_tag movie.poster_url, alt: movie.title, class: "movie-img rounded-top" %>
        <%= movie.title %>
      </div>
    <% end %>
  </div>



</div>
